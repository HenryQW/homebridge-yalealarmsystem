{
  "pluginAlias": "YaleSyncAlarm",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Burglar Alarm"
      },
      "username": {
        "title": "Username",
        "type": "string",
        "required": true,
        "placeholder": "Your Yale username"
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true,
        "placeholder": "Your Yale password"
      },
      "refreshInterval": {
        "title": "Refresh Interval",
        "type": "number",
        "required": true,
        "default": 10
      }
    }
  }
}